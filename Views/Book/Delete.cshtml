@model BookSmart.Models.Book


<form method="post" asp-action="DeleteBook">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Book</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Author"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Genre.Name"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <input class="form-control" asp-for="Name" disabled />
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Author" disabled />
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Price" disabled />
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Genre.Name" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



