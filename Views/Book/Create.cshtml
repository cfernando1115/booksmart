@model BookSmart.ViewModels.BookFormViewModel


<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Book</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Book.Price"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Book.GenreId"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <input class="form-control" asp-for="Book.Name" />
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Book.Author" />
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Book.Price" />
                    </div>
                    <select asp-for="Book.GenreId"
                        asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                    </select>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

