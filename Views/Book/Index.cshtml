@model BookSmart.Utility.PagedList<BookSmart.Models.Book>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books</h2>
        </div>
        @if (User.IsInRole(BookSmart.Utility.RoleHelper.Admin))
        {
            <div class="col-6 text-right">
                <a class="btn btn-primary" asp-controller="Book" asp-action="Create">Add Book</a>
            </div>
        }
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Price</th>
                    @if (User.IsInRole(BookSmart.Utility.RoleHelper.Admin))
                    {
                        <th>Update/Delete</th>
                    }
                    else
                    {
                        <th>Add To Bag/Book Details</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td width="15%">@book.Name</td>
                        <td width="15%">@book.Author</td>
                        <td width="15%">@book.Genre.Name</td>
                        <td width="15%">@book.Price</td>
                        @if (User.IsInRole(BookSmart.Utility.RoleHelper.Admin))
                        {
                            <td width="30%">
                                <div class="w-100 btn-group" role="group">
                                    <a class="btn btn-primary mx-1" asp-route-id="@book.Id" asp-controller="Book" asp-action="Update">Update</a>
                                    <a class="btn btn-danger mx-1" asp-route-id="@book.Id" asp-controller="Book" asp-action="Delete">Delete</a>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td width="30%">
                                <div class="w-100 btn-group" role="group">
                                    <a class="btn btn-primary mx-1 text-white add-bag-btn" id="addToBagBtn" onclick="addBookToBag(@book.Id)">Add To Bag</a>
                                    <a class="btn btn-danger mx-1" asp-route-id="@book.Id" asp-controller="Book" asp-action="Detail">Detail</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <p><small>Page <span class="currentPage">@Model.CurrentPage</span> of <span class="totalPages">@Model.TotalPages</span> pages</small></p>
            <ul class="pagination justify-content-center">
                <li class="page-item" id="first">
                    <a class="page-link" asp-controller="Book" asp-action="Index" asp-route-pageNumber="1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (var i = 0; i < @Model.TotalPages; i++)
                {
                    <li class="page-item pageBtn" data-page="@(i+1)"><a class="page-link" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@(i + 1)">@(i+1)</a></li>
                }
                <li class="page-item" id="last">
                    <a class="page-link" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@Model.TotalPages" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>

@section Scripts{
    <script src="~/js/addToBag.js"></script>
    <script src="~/js/pagination.js"></script>
}
