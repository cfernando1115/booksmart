@model BookSmart.ViewModels.MemberBooksViewModel

<partial name="_MemberBannerPartial" , model="Model.Member" />

<div class="container p-3">
    <h3 class="text-center">Some books you may have missed</h3>
    <div class="text-center row mt-3">
        @foreach (var book in Model.Books)
        {
        <div class="text-center col-sm-4 mt-5">
            <img src="~/img/logo-small.svg" alt="@book.Name" />
            <h5 class="mt-3">@book.Name</h5>
            <p class="mb-1">@book.Author</p>
            <p class="mb-1">@book.Genre.Name</p>
            <p class="mb-0">@book.Price</p>
            <p><small><i> before membership discount</i></small></p>
            <button type="button" class="btn btn-primary mx-1" id="addToBagBtn" onclick="addBookToBag(@book.Id);">Add To Bag</button>
            <a class="btn btn-outline-primary mx-1" asp-route-id="@book.Id" asp-controller="Book" asp-action="Detail">Detail</a>
        </div>
        }
    </div>
</div>

@section Scripts{
    <script src="~/js/addToBag.js"></script>
    <script src="~/js/removeFromBag.js"></script>
}
