@model BookSmart.ViewModels.BookFormViewModel

<div class="container">
    <form method="post" asp-action="Update">
        <input asp-for="Book.Id" hidden />
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Update Book</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Book.Name"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Book.Author"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Book.Price"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Book.GenreId"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <input class="form-control" asp-for="Book.Name" />
                            <span asp-validation-for="Book.Name" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <input class="form-control" asp-for="Book.Author" />
                            <span asp-validation-for="Book.Author" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <input class="form-control" asp-for="Book.Price" />
                            <span asp-validation-for="Book.Price" class="text-danger"></span>
                        </div>
                        <select asp-for="Book.GenreId"
                                asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                        </select>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="Book.Description"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 col-sm-12">
                            <textarea class="form-control" asp-for="Book.Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Update" />
                            </div>
                            <div class="col">
                                <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



