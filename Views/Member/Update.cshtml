@model BookSmart.ViewModels.MemberUpdateViewModel

<div class="container">
    <form method="post" asp-action="Update">
        <input asp-for="Member.Id" hidden />
        <div class="border p-3 mt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row d-flex justify-content-center">
                <h2 class="text-black-50 pl-3">Update Member</h2>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Member.Name"></label>
                        <input type="text" class="form-control" asp-for="Member.Name" />
                        <span asp-validation-for="Member.Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Member.MembershipTypeId"></label>
                        <select class="form-control" asp-for="Member.MembershipTypeId"
                                asp-items="@(new SelectList(Model.MembershipTypes, "Id", "Name"))">
                        </select>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Member.BooksRemaining"></label>
                        <input type="number" class="form-control" asp-for="Member.BooksRemaining" />
                        <span asp-validation-for="Member.BooksRemaining" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Member.LastLogin"></label>
                        <input type="date" disabled class="form-control" asp-for="Member.LastLogin" />
                        <span asp-validation-for="Member.LastLogin" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <input type="submit" class="btn btn-info mr-2" value="Update" />
                <a class="btn btn-danger" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
