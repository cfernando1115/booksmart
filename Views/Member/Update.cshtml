@model BookSmart.ViewModels.MemberUpdateViewModel

<div class="container">
    <form method="post" asp-action="Update">
        <input asp-for="Member.Id" hidden />
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Add Book</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Member.Name"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Member.MembershipTypeId"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Member.BooksRemaining"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Member.LastLogin"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <input class="form-control" asp-for="Member.Name" />
                            <span asp-validation-for="Member.Name" class="text-danger"></span>
                        </div>
                        <select asp-for="Member.MembershipTypeId"
                                asp-items="@(new SelectList(Model.MembershipTypes, "Id", "Name"))">
                        </select>
                        <div class="col-3">
                            <input class="form-control" asp-for="Member.BooksRemaining" />
                            <span asp-validation-for="Member.BooksRemaining" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <input disabled class="form-control" asp-for="Member.LastLogin" />
                            <span asp-validation-for="Member.LastLogin" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Update" />
                            </div>
                            <div class="col">
                                <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
